<UserControl x:Class="M120Projekt.UserControls.Neuansicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt.UserControls"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Grid.Row="1" Width="500" Height="400" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="5" Grid.Row="0" Orientation="Horizontal">
                <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Width="100" MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" TextChanged="TxtName_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal">
                <Label Content="Publisher:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPublisher" Width="100" MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" TextChanged="TxtPublisher_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="2" Orientation="Horizontal">
                <Label Content="Erscheinungsdatum:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <DatePicker x:Name="datePicker" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="3" Orientation="Horizontal">
                <Label Content="Mindestalter:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMindestalter" Width="30" MaxLength="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" TextChanged="TxtMindestalter_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="4" Orientation="Horizontal">
                <Label Content="Preis:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPreis" Width="75" MaxLength="4" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" TextChanged="TxtPreis_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="5" Orientation="Horizontal">
                <Label Content="Steam:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <CheckBox x:Name="checkSteam" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="5" Grid.Row="6" Orientation="Horizontal">
                <Label Content="Bewertung:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBewertung" Width="100" MaxLength="10" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" TextChanged="TxtBewertung_TextChanged"/>
            </StackPanel>
            <DockPanel Margin="5" Grid.Row="7">
                <Button Content="Erstellen" HorizontalAlignment="Left" Width="70"></Button>
                <Button Content="Felder Leeren" HorizontalAlignment="Right" Width="70" Click="Button_Click"/>
                <Button Content="Abbrechen" HorizontalAlignment="Right" Width="70" Click="Button_Click_1"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
