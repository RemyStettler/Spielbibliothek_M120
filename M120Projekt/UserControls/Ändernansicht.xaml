<UserControl x:Class="M120Projekt.UserControls.Ändernansicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Grid.Row="1" Width="500" Height="400" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="5" Grid.Row="0" Orientation="Horizontal">
                <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Text="Tom Clancy's Rainbow Six Siege" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal">
                <Label Content="Publisher:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPublisher" Text="Ubisoft" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>
            <StackPanel Margin="5" Grid.Row="2" Orientation="Horizontal">
                <Label Content="Bild-Pfad:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBildPfad" Text="NULL" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="3" Orientation="Horizontal">
                <Label Content="Erscheinungsdatum:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtErscheinungsdatum" Text="2015" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="4" Orientation="Horizontal">
                <Label Content="Mindestalter:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMindestalter" Text="18" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="5" Orientation="Horizontal">
                <Label Content="Preis:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPreis" Text="77.99 CHF" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>

            <StackPanel Margin="5" Grid.Row="6" Orientation="Horizontal">
                <Label Content="Steam:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <CheckBox x:Name="checkSteam" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="5" Grid.Row="7" Orientation="Horizontal">
                <Label Content="Bewertung:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSterne" Text="5 Sterne" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Padding="5"/>
            </StackPanel>
            <DockPanel Margin="5" Grid.Row="8">
                <Button Content="Speichern" HorizontalAlignment="Left" Width="70" Click="ButtonSave_Click"></Button>
                <Button Content="Abbrechen" HorizontalAlignment="Right" Width="70" Click="Button_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
